<html>
  <head>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag "cookies" %>
    <%= javascript_include_tag "table" %>
  </head>
  <body onload='indexCheck()'>
    <div class="wrapper" style="display: inline-block; min-width: 100%;">
      <%= render 'shared/header' %>
      <div class="page">
        <% if @info %>
          <h2> Roster - <%= @info['name'] %></h2>
          <table>
            <tr>
              <th class="data" onclick="sort_table(0)">First Name</th>
              <th class="data" onclick="sort_table(1)">Last Name</th>
              <th class="data" onclick="sort_table(2)">Team</th>
              <th class="data" onclick="sort_table(3)">Eligible Position</th>
              <th class="data" onclick="sort_table(4)">Current Position</th>
              <th class="data" onclick="sort_table(5)">G</th>
              <th class="data" onclick="sort_table(6)">A</th>
              <th class="data" onclick="sort_table(7)">+/-</th>
              <th class="data" onclick="sort_table(8)">SOG</th>
              <th class="data" onclick="sort_table(9)">PPP</th>
              <th class="data" onclick="sort_table(10)">HITS</th>   
              <th class="data" onclick="sort_table(11)">WINS</th>
              <th class="data" onclick="sort_table(12)">SV%</th>
              <th class="data" onclick="sort_table(13)">GAA</th>
              <th class="data" onclick="sort_table(14)">SO</th>
            </tr>
            <tbody id="rankings">
              <% for player  in @players do%>
                <tr>
                  <td class="tableData"><%= player[0]['name']['first'] %></td>
                  <td class="tableData"><%= player[0]['name']['last'] %></td>
                  <td class="tableData"><%= player[0]['editorial_team_abbr'].upcase %></td>
                  <td class="tableData"><%= player[0]['display_position'] %></td>
                  <td class="tableData"><%= player[0]['selected_position']['position'] %></td>
                  <% if player[1] %>
                    <td class="tableData"><%= player[1]['G'] %></td>
                    <td class="tableData"><%= player[1]['A'] %></td>
                    <td class="tableData"><%= player[1]['+/-'] %></td>
                    <td class="tableData"><%= player[1]['SOG'] %></td>
                    <td class="tableData"><%= player[1]['PPP'] %></td>
                    <td class="tableData"><%= player[1]['HITS'] %></td>
                    <td class="tableData"><%= player[1]['W'] %></td>
                    <td class="tableData"><%= player[1]['SV%'].to_f.round(3) %></td>
                    <td class="tableData"><%= player[1]['GAA'].to_f.round(3) %></td>
                    <td class="tableData"><%= player[1]['SO'] %></td>
                  <% else %>  
                    <td class="tableData"></td>
                    <td class="tableData"></td>
                    <td class="tableData"></td>
                    <td class="tableData"></td>
                    <td class="tableData"></td>
                    <td class="tableData"></td>
                    <td class="tableData"></td>
                    <td class="tableData"></td>
                    <td class="tableData"></td>
                    <td class="tableData"></td>
                  <% end %>
                </tr>
              <% end %>
            </tbody>
          </table>
        <% end %>    
      </div>
    </div>
  </body>
</html>